<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.a000webhostapp.trackingdaily.dumpit.ResponseSweeper">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/after_rspns"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="gone"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/before_rspns"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <TextView
        android:id="@+id/rspns_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="ID: " />

    <TextView
        android:id="@+id/rspns_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="Type: " />

    <TextView
        android:gravity="center"
        android:id="@+id/comp_time_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        />

    <TextView
        android:id="@+id/rspns_time_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Response Time: "
        android:visibility="gone"/>

    <TextView
        android:id="@+id/rspns_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="Current Status: " />


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Response: "
            android:textColor="@color/black"/>
        <RadioButton android:id="@+id/radio_engaging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engaging"
            android:textColor="@color/black"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:textColor="@color/black"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <Button
        android:id="@+id/button_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Done"
        android:textColor="@color/txt"
        android:background="@color/button"
        android:visibility="gone"
        android:layout_gravity="bottom"/>

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Next"
        android:visibility="gone"
        android:layout_gravity="bottom"/>
</LinearLayout>
